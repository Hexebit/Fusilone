<Window x:Class="Fusilone.MaintenanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fusilone"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="BakÄ±m Takvimi" Height="650" Width="1000"
        Icon="pack://application:,,,/assets/logo.png"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
            <materialDesign:PackIcon Kind="CalendarClock" Width="32" Height="32" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="{DynamicResource Maintenance_Title}" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="15,0,0,0"/>
        </StackPanel>

        <materialDesign:Card Grid.Row="1" VerticalAlignment="Stretch">
            <DataGrid x:Name="MaintenanceDataGrid" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      materialDesign:DataGridAssist.CellPadding="12 8 8 8"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="12"
                      Background="Transparent"
                      BorderThickness="0"
                      MouseDoubleClick="MaintenanceDataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource Maint_Col_DeviceId}" Binding="{Binding Id}" Width="Auto" FontWeight="Bold"/>
                    <DataGridTextColumn Header="{DynamicResource Maint_Col_Type}" Binding="{Binding Type}" Width="Auto"/>
                    <DataGridTextColumn Header="{DynamicResource Maint_Col_Brand}" Binding="{Binding Brand}" Width="*"/>
                    <DataGridTextColumn Header="{DynamicResource Maint_Col_Model}" Binding="{Binding Model}" Width="*"/>
                    <DataGridTextColumn Header="{DynamicResource Maint_Col_Last}" Binding="{Binding LastMaintenanceDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="Auto"/>
                    <DataGridTemplateColumn Header="{DynamicResource Maint_Col_Next}" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding NextMaintenanceDate, StringFormat=\{0:dd.MM.yyyy\}}" 
                                           Foreground="{DynamicResource MaterialDesignBody}" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
    </Grid>
</Window>