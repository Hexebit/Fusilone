<Application x:Class="Fusilone.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Fusilone"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Theme-aware brushes and application-specific color keys -->
            <SolidColorBrush x:Key="SuccessColor" Color="#FF28A745"/>
            <SolidColorBrush x:Key="ErrorColor" Color="#FFFF6B6B"/>
            <SolidColorBrush x:Key="AccentColor" Color="#FFFFC107"/>

            <!-- Device type colors for charts and kanban -->
            <SolidColorBrush x:Key="TypeColor_PC" Color="#FF4EAEF0"/>
            <SolidColorBrush x:Key="TypeColor_LP" Color="#FFFFA726"/>
            <SolidColorBrush x:Key="TypeColor_AO" Color="#FF9C27B0"/>
            <SolidColorBrush x:Key="TypeColor_PH" Color="#FF03A9F4"/>
            <SolidColorBrush x:Key="TypeColor_ET" Color="#FFF44336"/>
            <SolidColorBrush x:Key="TypeColor_MN" Color="#FF8BC34A"/>

            <!-- Kanban/status colors -->
            <SolidColorBrush x:Key="StatusColor_Pending" Color="#FF2196F3"/>
            <SolidColorBrush x:Key="StatusColor_InProgress" Color="#FFFF9800"/>
            <SolidColorBrush x:Key="StatusColor_Ready" Color="#FF4CAF50"/>

            <!-- Overlay and item backgrounds to improve separation in light theme -->
            <SolidColorBrush x:Key="OverlayBrush" Color="#33111111"/>
            <SolidColorBrush x:Key="ItemBackgroundBrush" Color="#22000000"/>
            <!-- Ensure text uses MaterialDesign body brush so Light/Dark themes flip text color appropriately -->
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
            </Style>
            <Style TargetType="materialDesign:Card">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2" />
                <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}" />
                <Setter Property="BorderThickness" Value="1" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
